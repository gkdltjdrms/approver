<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<script>
	$(function(){
		
		$("#idChk").click(function(){
			
			
			var id = $("#id").val();
			var engNum =  /^[a-zA-Z0-9]*$/;
			
			
			if(id == ''){
				alert('아이디를 입력하세요');
				$("#id").focus();
			}else if(!engNum.test(id)){
				alert("영어 숫자");
				$("#id").val("").focus();
			}else if(id == 'test'){
				alert("중복");
				$("#id").val("").focus();
			}else{
				alert("사용 가능한 아이디");
			}
			
		})
		
		$("#name").keyup(function(){
			
			if($("#name").val().length > 5){
				$("#name").val( $("#name").val().slice(0, 5) );
			}
			
		})
		
		$("#jumin2").keyup(function(){
			var jumin2 = $("#jumin2").val().charAt($("#jumin2").val().length - 1);
			$("#jumin3").val($("#jumin3").val() + jumin2);
			
			if($("#jumin2").val().length > 1){
				$("#jumin2").val( $("#jumin2").val().slice(0, -1) + '*' );
			}
		})
		
		
		
		
		
		$("#all").click(function(){
			
			if($("#all").is(":checked")){
				$("[name=chk]").prop("checked",true);
				  var checkedElements = $("input[type='checkbox']:checked").not(this);
			        
			        // Append their values to #txtDv
			        checkedElements.each(function () {
			            $("#txtDv").append($(this).val());
			}else{
				$("[name=chk]").prop("checked",false);
			}
		})
		
		$("#btn").click(function(){
			var checked = $("[name=chk]:checked").length;
			
			if(checked == 0){
				alert("항목 체크");
			}else if(checked < 5 || $("#all").is(":checked")){
				alert("성공");
			}else{
				alert("실패");
			}
		})
		
		$("[name=chk]").click(function(){
			var checkbox = $("[name=chk]").length;
			var checked = $("[name=chk]:checked").length;
			
			if(checkbox == checked){
				$("#all").prop("checked",true);
			}else{
				$("#all").prop("checked",false);
			}
			
			if($(this).is(":checked")){
				$("#txtDv").append($(this).val());
			}else{
				$("#txtDv").text( $("#txtDv").text().replace($(this).val(),'') );
			}
			
			$("#all").click(function(){		
				  if ($("#all").is(":checked")) {
				        // Find all checked elements except the current one
				        var checkedElements = $("input[type='checkbox']:checked").not(this);
				        
				        // Append their values to #txtDv
				        checkedElements.each(function () {
				            $("#txtDv").append($(this).val());
				        });
				    } else {
				        $("#txtDv").text(''); // Clear the content
				}
			})
			
			
			
			
// 			$(this)
		})
		
	})
	
</script>
</head>
<body>


