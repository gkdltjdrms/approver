<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<!-- 이 부분이 수정되었습니다. -->
<%@ page import="java.util.List" %>
<%@ page import="model.post" %>

<%
    // 서버 측에서 전체 데이터 및 현재 페이지 정보를 가져옴
    List<post> listOfPosts = (List<post>) request.getAttribute("listOfPosts");
    int currentPage = (int) request.getAttribute("currentPage");
    int totalPages = (int) request.getAttribute("totalPages");
%>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>글목록</title>

    <style>
        <!-- 이전 스타일 유지 -->

        /* 페이지 처리 스타일 */
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
        }

        .pagination-item {
            margin: 0 5px;
        }

        .pagination-item a, .pagination-item span {
            text-decoration: none;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            color: #333;
            background-color: #fff;
            transition: background-color 0.3s ease;
        }

        .pagination-item span {
            color: red;
            background-color: #f0f0f0;
        }

        .pagination-item a:hover {
            background-color: #f0f0f0;
        }

        <!-- 이전 스타일 유지 -->
    </style>

</head>
<body>
    <h1>글목록</h1>

    <!-- 생략된 부분 -->

    <form id="searchForm" action="searchgo" method="get">
         <!-- 생략된 부분 -->
        <input type="hidden" id="page" name="page" value="<%= currentPage %>">
    </form>
    <button id="search_go">검색</button>

    <div id="table-container">
        <%@include file="table.jsp" %>
    </div>

    <!-- 페이지 번호 표시 -->
    <ul class="pagination" id="pagination-container">
        <!-- 이하 생략 -->
    </ul>

    <!-- jQuery CDN 추가 -->
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>

    <script>
        $(document).ready(function () {
            loadData(1);

            $("#search_go").on("click", function () {
                loadData(1);
            });

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                var clickedPage = $(this).data("page");
                loadData(clickedPage);
            });

            function loadData(page) {
                $("#page").val(page);

                $.ajax({
                    type: "GET",
                    url: "searchgo",
                    data: $("#searchForm").serialize(),
                    dataType: "json", // JSON 형식으로 응답 받음
                    success: function (data) {
                        console.log("AJAX Success");

                        var tableContainer = $("#table-container");
                        tableContainer.empty();
                        tableContainer.append(data.html); // HTML 데이터 추가

                        // 페이지 번호 처리
                        var paginationContainer = $("#pagination-container");
                        paginationContainer.empty();
                        for (var i = 1; i <= data.totalPages; i++) {
                            var pageLink = $("<a>")
                                .attr("href", "#")
                                .addClass("page-link")
                                .data("page", i)
                                .text(i);

                            if (i === data.currentPage) {
                                pageLink.addClass("active");
                            }

                            var listItem = $("<li>")
                                .addClass("pagination-item")
                                .append(pageLink);

                            paginationContainer.append(listItem);
                        }
                    },
                    error: function (error) {
                        console.error("Error fetching data:", error);
                    }
                });
            }
        });
    </script>
</body>
</html>
